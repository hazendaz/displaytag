<?xml version="1.0" encoding="UTF-8" ?>
<project default="rebuild-all" xmlns:m="maven" xmlns:j="jelly:core" xmlns:u="jelly:util">

	<goal name="rebuild-all">
		<j:set var="goals" value="clean,jar:jar,war:war,cactus,site:generate" />
		<mkdir dir="${maven.build.dir}" />
		<u:tokenize var="goals" delim=",">${goals}</u:tokenize>
		<j:forEach items="${goals}" var="goal" indexVar="goalNumber">
			Now attaining goal number ${goalNumber}, which is ${goal}
			<attainGoal name="${goal}" />
		</j:forEach>
	</goal>


    <goal name="doc-tagreference">
        <echo message="creating tag reference doc from tld" />
        <!-- Major hack - set jaxp properties as they are foobared -->
        ${systemScope.setProperty('javax.xml.transform.TransformerFactory','org.apache.xalan.processor.TransformerFactoryImpl')}

        <xslt style="${maven.src.dir}/xslt/format-tld.xslt"
            in="${maven.src.dir}/tld/displaytag-12.tld"
            out="${maven.gen.docs}/tagreference.xml" >
            <xmlcatalog>
                <dtd 
                    publicId="-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN"
                    location="${maven.src.dir}/xslt/web-jsptaglibrary_1_2.dtd"/>
                <dtd 
                    publicId="-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.1//EN"
                    location="${maven.src.dir}/xslt/web-jsptaglibrary_1_1.dtd"/>
            </xmlcatalog>    
        </xslt>
    </goal>


    <goal name="convert-dtd">
        <echo message="creating jsp 1.1 version of the tld" />
        <!-- Major hack - set jaxp properties as they are foobared -->

        ${systemScope.setProperty('javax.xml.transform.TransformerFactory','org.apache.xalan.processor.TransformerFactoryImpl')}
        <xslt style="${maven.src.dir}/xslt/convert-tld.xslt"
            in="${maven.src.dir}/tld/displaytag-12.tld"
            out="${maven.build.dir}/tld/displaytag-11.tld">
            
            <xmlcatalog>
                <dtd 
                    publicId="-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN"
                    location="${maven.src.dir}/xslt/web-jsptaglibrary_1_2.dtd"/>
                <dtd 
                    publicId="-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.1//EN"
                    location="${maven.src.dir}/xslt/web-jsptaglibrary_1_1.dtd"/>
            </xmlcatalog>  
        </xslt>
            
        <copy file="${maven.src.dir}/tld/displaytag-12.tld"
            tofile="${maven.build.dir}/tld/displaytag-12.tld" />
    </goal>


    <preGoal name="xdoc:jelly-transform">
		<!-- preprocess faq.fml -->
        <attainGoal name="faq" />
		<!-- create tag reference -->
        <attainGoal name="doc-tagreference" />
	</preGoal>


	<postGoal name="java:jar-resources">
		<!-- create 1.1 dtd -->
        <attainGoal name="convert-dtd" />
	
	    <!-- add tld to taglib jar -->
        <echo message="copying ${maven.src.dir}/tld/displaytag.tld to file ${maven.build.dest}/META-INF/displaytag.tld" />
        <copy file="${maven.build.dir}/tld/displaytag-11.tld"
            tofile="${maven.build.dest}/META-INF/displaytag.tld" />
	</postGoal>

	<!-- copy tld for example webapp -->
	<postGoal name="war:webapp">

		<echo message="deleting ${maven.war.webapp.dir}/META-INF" />
		<delete file="${maven.war.webapp.dir}/META-INF" />

		<echo message="copying ${maven.src.dir}/tld/displaytag-12.tld to dir ${maven.war.webapp.dir}/${maven.war.tld.dir}" />
		<copy file="${maven.src.dir}/tld/displaytag-12.tld" todir="${maven.war.webapp.dir}/${maven.war.tld.dir}" />

	</postGoal>




</project>
