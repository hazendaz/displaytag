<?xml version="1.0" encoding="UTF-8"?>
<project>
    <extend>../displaytag-doc/project.xml</extend>
    <pomVersion>3</pomVersion>
    <id>displaytag-examples</id>
    <name>Display tag library examples</name>
    <groupId>displaytag</groupId>
    <currentVersion>1.1-SNAPSHOT</currentVersion>
    <organization>
        <name>the Displaytag team</name>
        <url>http://sourceforge.net/projects/displaytag</url>
        <logo>http://sourceforge.net/sflogo.php?group_id=73068&amp;type=8</logo>
    </organization>
    <inceptionYear>2002</inceptionYear>
    <package>org.displaytag.sample</package>
    <logo>/images/displaytag.png</logo>
    <description>
        The display tag library is an open source suite of custom tags that provide high-level web presentation patterns
        which will work in an MVC model. The library provides a significant amount of functionality while still being
        easy to use.
    </description>
    <shortDescription>Display tag library</shortDescription>
    <url>http://displaytag.sourceforge.net</url>
    <issueTrackingUrl>http://jira.codehaus.org/browse/DISPL</issueTrackingUrl>
    <siteAddress>shell.sourceforge.net</siteAddress>
    <siteDirectory>/home/groups/d/di/displaytag/htdocs/11/examples</siteDirectory>
    <repository>
        <connection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot/displaytag:displaytag-examples</connection>
        <developerConnection>
            scm:cvs:ext:${maven.username}@cvs.sourceforge.net:/cvsroot/displaytag:displaytag-examples
        </developerConnection>
        <url>http://cvs.sourceforge.net/cgi-bin/viewcvs.cgi/displaytag/displaytag-examples/</url>
    </repository>
    <versions/>
    <mailingLists/>
    <licenses>
        <license>
            <name>Artistic License</name>
            <url>http://displaytag.sourceforge.net/license.html</url>
        </license>
    </licenses>
    <dependencies>
        <dependency>
            <groupId>displaytag</groupId>
            <artifactId>displaytag</artifactId>
            <version>1.1-SNAPSHOT</version>
            <type>jar</type>
            <properties>
                <war.bundle>true</war.bundle>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>1.6.1</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/beanutils</url>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>2.1.1</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/collections</url>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.0</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/lang</url>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.4</version>
            <type>jar</type>
            <url>http://jakarta.apache.org/commons/logging</url>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <type>jar</type>
            <url>http://logging.apache.org/log4j/docs/index.html</url>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>servletapi</groupId>
            <artifactId>servletapi</artifactId>
            <version>2.3</version>
            <type>jar</type>
            <properties>
                <comment>
                    Servlet 2.3 support is required to build the library. At runtime only servet 2.2 (tomcat 3,
                    websphere 4) is strictly needed, servlet 2.3 support (tomcat 4, websphere 5) is needed only for the
                    EL version of the taglib
                </comment>
            </properties>
        </dependency>
        <dependency>
            <groupId>itext</groupId>
            <artifactId>itext</artifactId>
            <version>0.99</version>
            <type>jar</type>
            <url>http://prdownloads.sourceforge.net/itext/</url>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <resources>
            <resource>
                <directory>src/resources</directory>
                <includes>
                    <include>**/*.*</include>
                </includes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>
    <reports>
        <report>maven-license-plugin</report>
        <report>maven-checkstyle-plugin</report>
        <report>maven-jdepend-plugin</report>
        <report>maven-pmd-plugin</report>
        <report>maven-findbugs-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-simian-plugin</report>
    </reports>
</project>

