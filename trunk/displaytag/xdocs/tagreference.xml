      <subsection name="setProperty">
        <p>Tag used to override default properties.</p>
        <table>
          <thead>
            <tr>
              <th>attribute</th>
              <th>required?</th>
              <th>description</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>name</td>
              <td>yes</td>
              <td>property name</td>
            </tr>
            <tr>
              <td>value</td>
              <td>yes</td>
              <td>property value</td>
            </tr>
          </tbody>
        </table>
      </subsection>

